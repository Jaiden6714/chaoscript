status.Text = "Status: Waiting for key..."

-------------------------------------------------
-- VALIDATION
-------------------------------------------------
local function validKey(input)
	return input == DEV_KEY or input == WEEKLY_KEY
end

local function accept()
	status.Text = "✅ Key accepted! Loading Chaos Menu..."
	task.wait(0.6)
	gui:Destroy()
	loadstring(game:HttpGet(CHAOS_URL))()
end

keyBox.FocusLost:Connect(function(enter)
	if enter then
		if validKey(keyBox.Text) then
			accept()
		else
			status.Text = "❌ Invalid key"
		end
	end
end)

